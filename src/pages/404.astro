---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col gap-8 items-center justify-center">
    <Image src={error} alt="404 Error" class="w-[250px] h-[250px] mt-10" />
    <h1 class="text-5xl font-bold text-center mt-5">Page Not Found</h1>
    <p class="text-gray-700 text-center mt-3">
      The page you are looking for does not exist.
    </p>
    <a
      href="/"
      class="mt-5 px-4 py-2 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600"
      >Go back to Home</a
    >
  </div></MainLayout
>
